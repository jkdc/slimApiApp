{
    "name": "slim/recipeapi",
    "description": "A Slim api Rest for manage recipes",
    "authors": [
        {
            "name": "Joaquin Cardoso Buzon",
            "email": "joaquincardosobuzon@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "elasticsearch/elasticsearch": "~6.0",
        "zircote/swagger-php": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/"            
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
